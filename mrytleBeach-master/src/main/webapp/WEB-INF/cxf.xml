<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:jaxws="http://cxf.apache.org/jaxws"
      xmlns:jaxrs="http://cxf.apache.org/jaxrs"
      xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd
							ttp://cxf.apache.org/jaxws
 							http://cxf.apache.org/schemas/jaxws.xsd
 							http://cxf.apache.org/jaxrs
 							http://cxf.apache.org/schemas/jaxrs.xsd">
  <import resource="classpath:META-INF/cxf/cxf.xml" />
  <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

  	
  <bean id="jacksonProvider" class="org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider" />
      	
  <jaxrs:server name="LakeshoreMarketResource" address="/lsm">
		<jaxrs:serviceBeans>
<!-- 			<ref bean="lakeshoreMarketServiceRest" /> -->
			<ref bean="productResource" />
			<ref bean="orderResource" />
			<ref bean="customerResource" />
			<ref bean="partnerResource" />
			<ref bean="paymentResource" />
			<ref bean="reviewResource" />
			<ref bean="utilResource" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jacksonProvider" />
		</jaxrs:providers> 

		<jaxrs:schemaLocations>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.product.ProductRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.product.ProductRequest</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.order.OrderRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.customer	.CustomerRequest</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.partner.PartnerRequest</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.review.PartnerReviewRequest</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.review.ProductReviewRequest</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.order.OrderRequest</jaxrs:schemaLocation>
			
<!-- 			Maggie's Schema Additions -->
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.customer	.CustomerRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.partner.PartnerRepresentation</jaxrs:schemaLocation>


<!-- 			Elliot's Schema Additions -->
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.partnerReport.PartnerReportRepresentation</jaxrs:schemaLocation>
			<jaxrs:schemaLocation>com.online.mrytlebeach.representation.review.ReviewRepresentation</jaxrs:schemaLocation>


		</jaxrs:schemaLocations>

	</jaxrs:server>
<!--   	<bean id="lakeshoreMarketServiceRest" class="com.online.mrytlebeach.service.LakeshoreMarketResource" /> -->
  	<bean id="productResource" class="com.online.mrytlebeach.resource.ProductResource" />
  	<bean id="orderResource" class="com.online.mrytlebeach.resource.OrderResource" />
  	<bean id="customerResource" class="com.online.mrytlebeach.resource.CustomerResource" />
  	<bean id="partnerResource" class="com.online.mrytlebeach.resource.PartnerResource" />
  	<bean id="paymentResource" class="com.online.mrytlebeach.resource.PaymentResource" />
  	<bean id="reviewResource" class="com.online.mrytlebeach.resource.ReviewResource" />
  	<bean id="utilResource" class="com.online.mrytlebeach.resource.UtilResource" />
  	
  
</beans>